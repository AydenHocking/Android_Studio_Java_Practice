<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewDateTimeForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="0000-00-00 00:00:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTempForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Min: 00.0 F"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTempMaxForecast"
            app:layout_constraintStart_toEndOf="@+id/textViewTempMaxForecast"
            app:layout_constraintTop_toTopOf="@+id/textViewTempMaxForecast" />

        <TextView
            android:id="@+id/textViewTempMaxForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Max: 00.0 F"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTempMinForecast"
            app:layout_constraintStart_toEndOf="@+id/textViewTempMinForecast"
            app:layout_constraintTop_toTopOf="@+id/textViewTempMinForecast"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewTempMinForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="00.0 F"
            app:layout_constraintStart_toStartOf="@+id/textViewDateTimeForecast"
            app:layout_constraintTop_toBottomOf="@+id/textViewDateTimeForecast" />

        <TextView
            android:id="@+id/textViewHumidityForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Humidity: %"
            app:layout_constraintStart_toStartOf="@+id/textViewTempMinForecast"
            app:layout_constraintTop_toBottomOf="@+id/textViewTempMinForecast" />

        <TextView
            android:id="@+id/textViewDescriptionForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewHumidityForecast"
            app:layout_constraintTop_toBottomOf="@+id/textViewHumidityForecast" />

        <ImageView
            android:id="@+id/imageViewIconForecast"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>